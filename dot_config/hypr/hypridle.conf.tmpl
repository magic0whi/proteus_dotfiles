{{ if lookPath "hypridle" -}}
general {
{{- if $kbdDevice := index . .chezmoi.hostname "hyprland" "keyboardBacklightDevice" }}
    lock_cmd = pidof hyprlock || (brightnessctl -sd {{ $kbdDevice }} set 0; hyprlock && loginctl unlock-session)
    unlock_cmd = brightnessctl -rd {{ $kbdDevice }}
{{- else }}
    lock_cmd = pidof hyprlock || (hyprlock && loginctl unlock-session)
{{- end }}
    before_sleep_cmd = loginctl lock-session    # lock before suspend.
    after_sleep_cmd = hyprctl dispatch dpms on  # to avoid having to press a key twice to turn on the display.
}

listener {
    timeout = 150                                # 2.5min.
    on-timeout = brightnessctl -s set 2%         # set monitor backlight to minimum, avoid 0 on OLED monitor.
    on-resume = brightnessctl -r                 # monitor backlight restore.
}
{{ if $kbdDevice := index . .chezmoi.hostname "hyprland" "keyboardBacklightDevice" }}
listener {
    timeout = 150                                          # 2.5min.
    on-timeout = brightnessctl -sd {{ $kbdDevice }} set 0 # turn off keyboard backlight.
    on-resume = brightnessctl -rd {{ $kbdDevice }}        # turn on keyboard backlight.
}

{{ end -}}
listener {
    timeout = 300                                 # 5min
    on-timeout = loginctl lock-session            # lock screen when timeout has passed
}

listener {
    timeout = 305                                 # 5.5min
    on-timeout = hyprctl dispatch dpms off        # screen off when timeout has passed
    on-resume = hyprctl dispatch dpms on          # screen on when activity is detected after timeout has fired.
}

