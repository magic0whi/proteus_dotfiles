Host *
    # Send keep-alive every 30s, disconnect if sent 5 times with no response
    ServerAliveInterval 30
    ServerAliveCountMax 5
    Compression yes
    # Share multiple ssh session along one connection, this reduce the time cost on reconnection
    ControlMaster auto
    ControlPath /tmp/ssh-%r@%h:%p
    # Increase the valid time of a connection
    ControlPersist 30m
{{ if stat .COMMON.sshKeyPath -}}
Host github.com hf.co
    User git
    IdentityFile {{ .COMMON.sshKeyPath }}
Host proteusdesktop 192.168.15.11 proteuslaptop proteusnotebook *.tailba6c3f.ts.net
    IdentityFile {{ .COMMON.sshKeyPath }}
{{ end -}}
